{{!< logreg}} <div id="registration">

    <div class="welcome_text">
        <h1><strong>Регистрация.</strong></h1>
    </div>

    <form action="#" method="get">

        <fieldset>

            <p><input type="text" required name="email" placeholder="Электронная почта"></p>

            <p><input type="text" required name="login" placeholder="Логин"></p>
            
            <p><input type="text" required name="FirstName" placeholder="Фамилия"></p>
            
            <p><input type="text" required name="LastName" placeholder="Имя"></p>

            <p><input type="text" required name="Phone" placeholder="Телефон"></p>
            
            <p><input type="password" required name="Password" placeholder="Пароль"></p>

            <p><input type="password" required name="ConfPassword" placeholder="Повторите пароль"></p>

            <p><input type="submit" value="Зарегистрироваться"></p>

        </fieldset>

    </form>

    <p><span class="btn-round">or</span></p>

